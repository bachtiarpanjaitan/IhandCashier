<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns:syncfusion="clr-namespace:Syncfusion.Maui.DataGrid;assembly=Syncfusion.Maui.DataGrid"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="IhandCashier.Pages.Views.GridDataBarang">
   <ContentView.Content>
        <Grid>
            <!-- Menggunakan sfDataGrid di dalam ContentView -->
            <syncfusion:SfDataGrid x:Name="GridBarang" HeightRequest="300" WidthRequest="300">
                 <syncfusion:SfDataGrid.Columns>
                    <!-- Definisikan kolom secara manual -->
                    <syncfusion:DataGridTextColumn HeaderText="ID" MappingName="id"/>
                    <syncfusion:DataGridTextColumn HeaderText="Kode" MappingName="kode"/>
                    <syncfusion:DataGridTextColumn HeaderText="Nama" MappingName="nama" />
                    <syncfusion:DataGridTextColumn HeaderText="Gambar" MappingName="gambar" />
                </syncfusion:SfDataGrid.Columns>
            </syncfusion:SfDataGrid>
        </Grid>
     </ContentView.Content>
</ContentView>
